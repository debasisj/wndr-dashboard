# Environment configuration for Docker deployment
# Copy this file to .env.deploy and customize the values

# Image Configuration - Uses debasisj Docker Hub registry by default
REGISTRY=debasisj/
VERSION=latest

# Port Configuration
API_PORT=4000
WEB_PORT=3000

# API Base URL (should match your deployment URL)
# For local deployment: http://localhost:4000
# For EC2 deployment: http://YOUR_EC2_IP:4000
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000

# Reports Storage Configuration
REPORTS_STORAGE=local
# REPORTS_STORAGE=s3

# S3 Configuration (only needed if REPORTS_STORAGE=s3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=your-bucket-name

# Admin Configuration
ADMIN_ENABLED=true
ADMIN_TOKEN=b8f2a9f3d1e94f35b0c1e6b9a7c2d4e8f1a3b5c7d9e0f2a4b6c8d0e1f3a5b7c9

# CORS Configuration
CORS_ORIGIN=*