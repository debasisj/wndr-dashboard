{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src",
    "scripts",
    "prisma"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}